@using MyCollection.Auth
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using MyCollection.Data

@inject UserManager<DAL.Entities.ApplicationUserEF> UserManager
@inject SignInManager<DAL.Entities.ApplicationUserEF> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
          method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.UserName!</a>
                </div>
            </li>

            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>

        </ul>
        
    </form>
    
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a id="registerLink" asp-controller="Account" asp-action="Register">Register</a></li>
        @*TODO #2 "Login/?ReturnURL=***PAGECURENT Example: https://localhost:44367/IMDB/GetMoviesByName***"*@
        <li><a id="loginLink" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}